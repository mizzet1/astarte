{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["master"],
  "description": "Fully automatic Renovate configuration for Astarte",
  
  "dependencyDashboardApproval": false,
  "prCreation": "immediate",
  
  "packageRules": [
    {
      "description": "Elixir non-breaking updates - automatic weekly",
      "matchManagers": ["mix"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Elixir non-breaking updates",
      "schedule": ["before 10am on monday"],
      "rangeStrategy": "update-lockfile",
      "postUpdateOptions": ["mixLockUpdate"],
      "automerge": false,
      "labels": ["dependencies", "elixir"]
    },
    {
      "description": "Elixir breaking updates - automatic monthly",
      "matchManagers": ["mix"],
      "matchUpdateTypes": ["major"],
      "groupName": "Elixir breaking updates",
      "schedule": ["before 10am on the first day of the month"],
      "rangeStrategy": "update-lockfile",
      "postUpdateOptions": ["mixLockUpdate"],
      "automerge": false,
      "labels": ["dependencies", "elixir", "major"]
    },
    {
      "description": "GitHub Actions - automatic monthly",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "schedule": ["before 10am on the first day of the month"],
      "pinDigests": true,
      "automerge": false,
      "labels": ["dependencies", "ci"]
    }
  ],
  
  "mix": {
    "enabled": true
  },
  
  "github-actions": {
    "enabled": true
  },
  
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on the first day of the month"]
  },
  
  "prConcurrentLimit": 3,
  "prHourlyLimit": 1,
  
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  
  "labels": ["renovate"],
  "timezone": "UTC"
}
