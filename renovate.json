{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["test-renovate", "release-1.3", "master"],
  "description": "Renovate configuration for Astarte - Elixir microservices project",
  
  "packageRules": [
    {
      "description": "Elixir dependencies for Astarte Services",
      "matchFileNames": ["apps/**/mix.exs"],
      "matchManagers": ["mix"],
      "groupName": "Elixir microservices dependencies",
      "schedule": ["before 10am on monday"],
      "automerge": false,
      "labels": ["dependencies", "elixir", "microservices"]
    },
    {
      "description": "Elixir dependencies for Astarte Tools",
      "matchFileNames": ["mix.exs", "tools/**/mix.exs"],
      "matchManagers": ["mix"],
      "matchDepTypes": ["dependencies"],
      "groupName": "Elixir shared libraries",
      "schedule": ["before 10am on monday"],
      "automerge": false,
      "labels": ["dependencies", "elixir", "shared-libs"]
    },
    {
      "description": "Elixir dependencies for Astarte Libraries",
      "matchFileNames": ["mix.exs", "libs/**/mix.exs"],
      "matchManagers": ["mix"],
      "matchDepTypes": ["dependencies"],
      "groupName": "Elixir shared libraries",
      "schedule": ["before 10am on monday"],
      "automerge": false,
      "labels": ["dependencies", "elixir", "shared-libs"]
    },
    {
      "description": "GitHub Actions versions",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "schedule": ["before 10am on the first day of the month"],
      "automerge": false,
      "labels": ["dependencies", "ci", "github-actions"],
      "pinDigests": true
    },
    {
      "description": "Elixir version updates",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["hexpm/elixir"],
      "groupName": "Elixir version",
      "schedule": ["before 10am on the first day of the month"],
      "automerge": false,
      "labels": ["dependencies", "elixir-version"]
    }
  ],
  
  "mix": {
    "enabled": true
  },
  
  "github-actions": {
    "enabled": true
  },
  
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "prHourlyLimit": 2,
  
  "semanticCommits": "enabled",
  "commitMessagePrefix": "[Renovate]",
  
  "assignees": [],
  "reviewers": [],
  
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on the first day of the month"]
  },
  
  "labels": ["renovate"],
  
  "branchPrefix": "renovate/",
  
  "ignoreDeps": [],
  
  "rangeStrategy": "bump",
  
  "timezone": "UTC"
}